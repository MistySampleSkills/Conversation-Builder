@model IEnumerable<ConversationBuilder.DataModels.SpeechConfiguration>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
	<link rel="stylesheet" href="~/css/@ViewBag.CssFile" />	
}

<h3>Speech configurations</h3>
<hr />
<h3 style="color:red">@ViewBag.Message</h3>
<p>
	@Html.ActionLink("Create New", "Create",  "SpeechConfigurations")
</p>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SpeechRecognitionService)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TextToSpeechService)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SpokenLanguage)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SpeakingVoice)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Updated)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.SpeechRecognitionService)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.TextToSpeechService)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.SpokenLanguage)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.SpeakingVoice)
			</td>			
			<td>
				@Html.DisplayFor(modelItem => item.Updated)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
				@Html.ActionLink("Details", "Details", new { id=item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id=item.Id })
			</td>
		</tr>
}
	</tbody>
</table>