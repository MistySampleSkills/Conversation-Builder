@model IEnumerable<ConversationBuilder.DataModels.LEDTransitionAction>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
	<link rel="stylesheet" href="~/css/@ViewBag.CssFile" />	
}

<h3>LED transition actions</h3>
<hr />
<h3 style="color:red">@ViewBag.Message</h3>
<p>
	@Html.ActionLink("Create New", "Create",  "LEDTransitionActions")
</p>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Red)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Green)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Blue)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Red2)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Green2)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Blue2)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Pattern)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PatternTime)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Updated)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Red)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Green)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Blue)
			</td>			
			<td>
				@Html.DisplayFor(modelItem => item.Red2)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Green2)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Blue2)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Pattern)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PatternTime)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Updated)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
				@Html.ActionLink("Details", "Details", new { id=item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id=item.Id })
			</td>
		</tr>
}
	</tbody>
</table>