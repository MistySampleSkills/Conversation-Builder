@model IEnumerable<ConversationBuilder.DataModels.LEDTransitionAction>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
	<link rel="stylesheet" href="~/css/themes/@ViewBag.CssFile" />	
}

<h3>LED transition actions</h3>
<hr />
<h3 style="color:red">@ViewBag.Message</h3>
<p>
	@Html.ActionLink("Create New", "Create",  "LEDTransitionActions")
</p>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				Starting Color
			</th>
			<th>
				Ending Color
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Pattern)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PatternTime)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td style="background-color:rgb(@item.Red,@item.Green,@item.Blue)">
			</td>
			<td style="background-color:rgb(@item.Red2,@item.Green2,@item.Blue2)">
			</td>
			
			<td>
				@Html.DisplayFor(modelItem => item.Pattern)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PatternTime)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
				@Html.ActionLink("Details", "Details", new { id=item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id=item.Id })
			</td>
		</tr>
}
	</tbody>
</table>

@section Scripts {
	@{await Html.RenderPartialAsync("_ColorPicker");}
}
