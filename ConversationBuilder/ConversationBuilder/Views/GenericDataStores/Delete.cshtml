@model ConversationBuilder.DataModels.GenericDataStore

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
	<link rel="stylesheet" href="~/css/themes/@ViewBag.CssFile" />	
}


@{
	var msg = "";
	if(ViewBag.CanBeDeleted)
	{
		msg = "Please confirm deletion of generic data store " + Model.Name + "?";
	}
	else
	{
		
		msg = "Generic data store " + Model.Name + " is in use and cannot be deleted.";
	}
}

<h3>@msg</h3>

<hr />
<h5 style="color:red">@ViewBag.Message</h5>

@if(@ViewBag.CanBeDeleted)
{
	<div>
