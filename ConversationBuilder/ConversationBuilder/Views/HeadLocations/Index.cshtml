@model IEnumerable<ConversationBuilder.DataModels.HeadLocation>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
	<link rel="stylesheet" href="~/css/themes/@ViewBag.CssFile" />	
}


<h3>Head movement</h3>
<hr />
<h3 style="color:red">@ViewBag.Message</h3>
<p>
	@Html.ActionLink("Create New", "Create",  "HeadLocations")
</p>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FollowFace)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FollowObject)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MinPitch)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MinRoll)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MinYaw)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MaxPitch)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MaxRoll)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MaxYaw)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.FollowFace)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.FollowObject)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.MinPitch)
			</td>			
			<td>
				@Html.DisplayFor(modelItem => item.MinRoll)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.MinYaw)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.MaxPitch)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.MaxRoll)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.MaxYaw)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
				@Html.ActionLink("Details", "Details", new { id=item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id=item.Id })
			</td>
		</tr>
}
	</tbody>
</table>