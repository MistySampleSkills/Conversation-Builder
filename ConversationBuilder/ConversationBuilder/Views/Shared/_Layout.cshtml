<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Misty Conversation Builder</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/themes/lite.css" />
	@RenderSection("Styles", false)
	<script src="~/js/dynamic-dictionary.js"></script>
	<script src="~/js/dynamic-list.js"></script>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Misty Conversation Builder</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<partial name="_LoginPartial" />
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link" href= "https://community.mistyrobotics.com/">Community</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<hr />	
	</header>
	<div class="container">
		@if(User.IsInRole(ConversationBuilder.Roles.SiteAdministrator) || User.IsInRole(ConversationBuilder.Roles.Customer))
		{
			<div class="container" style = "text-align: center;">
				<nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
				<div class="container">				
					<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
						<ul class="navbar-nav flex-grow-1">
							<li class="nav-item">							
								<a class="nav-link"asp-action="index" asp-controller="armlocations">Arms</a>
							</li>
							<li class="nav-item">
								<a class="nav-link"asp-action="index" asp-controller="headlocations">Head</a>
							</li>
							<li class="nav-item">
								<a class="nav-link"asp-action="index" asp-controller="lEDTransitionActions">LEDs</a>
							</li>
							<li class="nav-item">
								<a class="nav-link"asp-action="index" asp-controller="animations">Animations</a>
							</li>
							<li class="nav-item">
								<a class="nav-link"asp-action="index" asp-controller="triggers">Triggers</a>
							</li>
							<li class="nav-item">
								<a class="nav-link"asp-action="index" asp-controller="speechHandlers">Speech Handlers</a>
							</li>
							<li class="nav-item">
								<a class="nav-link"asp-action="index" asp-controller="conversations">Conversations</a>
							</li>
							<li class="nav-item">
								<a class="nav-link"asp-action="index" asp-controller="conversationGroups">Conversation Groups</a>
							</li>
							<li class="nav-item">
								<a class="nav-link"asp-action="index" asp-controller="genericDataStores">Data</a>
							</li>
							<li class="nav-item">
								<a class="nav-link"asp-action="index" asp-controller="skillMessages">Skills</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Administrative">Administrative</a>
							</li>
						</ul>
					</div>
				</div>
				</nav>
			</div>
		}
	</div>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	
	<footer class="border-top footer text-muted">		
		<div class="container text-center">
			&copy; 2021 - <a href= "https://www.mistyrobotics.com">Misty Robotics</a> - <a href= "https://www.mistyrobotics.com/legal">Legal</a> - <a href= "https://github.com/MistySampleSkills/Conversation-Builder">Code</a> - Version 0.9.1			
		</div>

	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>