@model IEnumerable<ConversationBuilder.DataModels.Animation>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
	<link rel="stylesheet" href="~/css/themes/@ViewBag.CssFile" />	
}


<h3>Animations</h3>
<hr />
<h3 style="color:red">@ViewBag.Message</h3>
<p>
	@Html.ActionLink("Create New", "Create",  "Animations")
</p>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Emotion)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Speak)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.AudioFile)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Silence)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Emotion)
			</td>	
			<td>
				@Html.DisplayFor(modelItem => item.Speak)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.AudioFile)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Silence)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
				@Html.ActionLink("Details", "Details", new { id=item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id=item.Id })
			</td>
		</tr>
}
	</tbody>
</table>